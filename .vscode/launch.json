{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "name": "Rust",
            "request": "launch",
            "program": "${relativeFileDirname}/../advent",
            "cwd": "${relativeFileDirname}/.."
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "program": "${fileBasename}",
            "cwd": "${fileDirname}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        // tsc
        {
            "type": "typescript",
            "request": "launch",
            "name": "tsc",
            "program": "${workspaceFolder}/node_modules/typescript/lib/tsc.js",
            "args": [
                "-p",
                "${workspaceFolder}/tsconfig.json",
                "--outDir",
                "${workspaceFolder}/out"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${relativeFile}",
            "preLaunchTask": "tsc",
            "outFiles": [
                "${relativeFileDirname}/out/**/*.js"
            ]
        }
    ]
}