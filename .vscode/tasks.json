    "version": "2.0.0",
    "tasks": [
        {
            "label": "runJS",
            "type": "shell",
            "command": "node ${relativeFileDirname}/*.js",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "runRust",
            "type": "shell",
            "command": "cd ${relativeFileDirname}/.. && cargo run",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}